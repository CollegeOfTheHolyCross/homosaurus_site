<h3>Hierarchy Display:</h3>
  <% if  Homosaurus.get_values('broader', @homosaurus).first.blank? %>
    <div style="padding-left:0px;">No Broader Term</div>
  <% else %>
    <%  Homosaurus.get_values('broader', @homosaurus).each do |broader| %>
       <% obj = Homosaurus.find_by(identifier: broader) %>
        <div style="padding-left:0px;"><%= link_to "#{obj.label}", vocab_path(:id => broader.split('/').last)%></div>
    <% end %>
  <% end %>


<div style="padding-left:40px;"><strong><%=  Homosaurus.get_values('prefLabel', @homosaurus).first %></strong></div>

          <%  @homosaurus_obj.narrower.each do |narrower| %>
